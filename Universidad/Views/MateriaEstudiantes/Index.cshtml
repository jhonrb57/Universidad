@model IEnumerable<Universidad.Models.MateriaEstudiante>

@{
    ViewBag.Title = "Incribir Materias";
}

<h2>Incribir Materias</h2>

<p>
    @Html.ActionLink("Incribir", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estudiante.Apellido)
        </th>
        <th>
            <b>
                <label>Materia</label>
            </b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estudiante.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materia.Titulo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Regresar", "IndexEstudiante", "Home")

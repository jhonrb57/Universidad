@{
    ViewData["Title"] = "Inicio";
    Layout = null;
}

@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/css/inicio.css")


<div class="container-fluid " style="background-color:blueviolet; color: #ffffff">
    <h6 style="font-size:small">Nos encontramos certificados con alta calidad </h6>
</div>
<nav class="navbar navbar-expand-lg navbar-light  border-bottom banner  Small shadow">
    <div class="container">
        <a class="navbar-brand  " href="#">
            <img src="~/Content/Images/AHub.png" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">

        </div>
    </div>
</nav>
<div class="container">

    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <div class="card card-signin my-5">
                            <div class="card-body">

                                <h5 class=" text-center">Administrador</h5>

                                @using (Html.BeginForm("Index", "Estudiantes"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-label-group">
                                        <label class="text-danger">@ViewBag.Mensaje</label>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>
                                    <input class="btn btn-sm btn-success btn-block text-uppercase" style="background-color:blueviolet" value="Estudiante" type="submit" />
                                    <hr class="my-4">
                                }

                                @using (Html.BeginForm("Index", "Materias"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-label-group">
                                        <label class="text-danger">@ViewBag.Mensaje</label>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>
                                    <input class="btn btn-sm btn-success btn-block text-uppercase" style="background-color:blueviolet" value="Materia" type="submit" />
                                    <hr class="my-4">
                                }

                                @using (Html.BeginForm("Index", "Profesors"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-label-group">
                                        <label class="text-danger">@ViewBag.Mensaje</label>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>
                                    <input class="btn btn-sm btn-success btn-block text-uppercase" style="background-color:blueviolet" value="Profesor" type="submit" />
                                    <hr class="my-4">
                                }

                                @using (Html.BeginForm("Index", "MateriaProfesors"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-label-group">
                                        <label class="text-danger">@ViewBag.Mensaje</label>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>
                                    <input class="btn btn-sm btn-success btn-block text-uppercase" style="background-color:blueviolet" value="Asignación de Profesores - Materia" type="submit" />
                                    <hr class="my-4">
                                }
                                @Html.ActionLink("Regresar", "Inicio")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - UniversidadMVC - Desarrollado por el Ingeniero Jhon Bohórquez - Versión 1.0
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>